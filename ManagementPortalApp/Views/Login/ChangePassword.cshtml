</head>

<body>
    
    <main class="auth-minimal-wrapper">
        <div class="auth-minimal-inner">
            <div class="minimal-card-wrapper">
                <div class="card mb-4 mt-5 mx-4 mx-sm-0 position-relative">
                    <div class="wd-50 bg-white p-2 rounded-circle shadow-lg position-absolute translate-middle top-0 start-50">
                        <img src="~/assets/images/logo-abbr.png" alt="" class="img-fluid">
                    </div>
                    <div class="card-body p-sm-5">
                        <h2 class="fs-20 fw-bolder mb-4">Reset</h2>
                        <h4 class="fs-13 fw-bold mb-2">Reset to your  password</h4>
                        <form id="changepasswordform" name="changepasswordform" method="post" action="@Url.Action("ChangePassword", "Login")" class="w-100 mt-4 pt-2">
                            <div class=" ">
                                <input value="@Model.oldpassword" type="password" class="form-control" id="oldpassword" autocomplete="new-password" notEqualTo="#newpassword" name="oldpassword" placeholder="Old Password" required>
                                 
                            </div>
                            <div class="my-4">
                                <input value="@Model.newpassword" type="password" class="form-control" id="newpassword" autocomplete="new-password" name="newpassword" notEqualTo="#oldpassword" placeholder="New Password" required>

                            </div>
                            <div class=" ">
                                <input value="@Model.confirmpassword" type="password" class="form-control" id="confirmpassword" autocomplete="new-password" name="confirmpassword" equalTo="#newpassword" placeholder="Confirm Password" required>

                            </div>
                            <div class="col-12 col-sm-12 col-md-12 col-lg-12 mt-3">
                                <span class="mt-2 redcolor">@ViewBag.OldPasswordMatch</span>
                                <span class="mt-2 redcolor">@ViewBag.PasswordMatch</span>
                                <span class="mt-2 redcolor">@ViewBag.ChkPassResult</span>
                                <span class="mt-2 redcolor">@ViewBag.MinAlphaChar</span>
                                <span class="mt-2 redcolor">@ViewBag.AlphaType</span>
                                <span class="mt-2 redcolor">@ViewBag.Message</span>
                                <span class="mt-2 redcolor">@ViewBag.MinCharCaps</span>
                                <span class="mt-2 redcolor">@ViewBag.MinNumericChar</span>
                                <span class="mt-2 redcolor">@ViewBag.MinSpecialChar</span>
                            </div>
                            <div class="mt-5">
                                <button class="btn btn-primary btn-lg savebutton w-100" type="submit"><i class='fether-save pe-2'></i>Change Password</button>
                                
                            </div>
                        </form>
                         
                    </div>
                </div>
            </div>
        </div>
    </main>
    
   
  
 
    <script src="~/assets/js/vendors.min.js"></script> 
    <script src="~/assets/js/common-init.min.js"></script> 
    <script src="~/assets/js/theme-customizer-init.min.js"></script>
