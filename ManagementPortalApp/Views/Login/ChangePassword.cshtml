@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login | MG Assets Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="assets/image/favicon.ico" type="image/x-icon">
    <link href="~/Public/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Public/css/custom-css/Layout/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Public/css/custom-css/Layout/responsive.css" rel="stylesheet" type="text/css" />
    <link href="~/Public/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" type="text/css" />
</head>

<body class="login-body">
    <section class="h-100 gradient-form">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-8">
                    <div class="card rounded-3 text-black login-card">
                        <div class="row g-0">
                            <div class="col-lg-5 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 d-block mx-auto">
                                    <img src="~/Public/image/logo.png" alt="Logo" class="img-fluid">
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="card-body p-md-5 mx-md-4">
                                    <form id="changepasswordform" name="changepasswordform" method="post" action="@Url.Action("ChangePassword", "Login")">
                                        <div class="row">
                                            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                                <input value="@Model.oldpassword" type="password" class="form-control" id="oldpassword" autocomplete="new-password" notEqualTo="#newpassword" name="oldpassword" placeholder="Old Password" required>
                                            </div>
                                            <div class="col-12 col-sm-12 col-md-12 col-lg-12 mt-3">
                                                <input value="@Model.newpassword" type="password" class="form-control" id="newpassword" autocomplete="new-password" name="newpassword" notEqualTo="#oldpassword" placeholder="New Password" required>
                                            </div>
                                            <div class="col-12 col-sm-12 col-md-12 col-lg-12 mt-3">
                                                <input value="@Model.confirmpassword" type="password" class="form-control" id="confirmpassword" autocomplete="new-password" name="confirmpassword" equalTo="#newpassword" placeholder="Confirm Password" required>
                                            </div>
                                            <div class="col-12 col-sm-12 col-md-12 col-lg-12 mt-3">
                                                <span class="mt-2 redcolor">@ViewBag.OldPasswordMatch</span>
                                                <span class="mt-2 redcolor">@ViewBag.PasswordMatch</span>
                                                <span class="mt-2 redcolor">@ViewBag.ChkPassResult</span>
                                                <span class="mt-2 redcolor">@ViewBag.MinAlphaChar</span>
                                                <span class="mt-2 redcolor">@ViewBag.AlphaType</span>
                                                <span class="mt-2 redcolor">@ViewBag.Message</span>
                                                <span class="mt-2 redcolor">@ViewBag.MinCharCaps</span>
                                                <span class="mt-2 redcolor">@ViewBag.MinNumericChar</span>
                                                <span class="mt-2 redcolor">@ViewBag.MinSpecialChar</span>
                                            </div>
                                            <div class="col-12 col-sm-12 col-md-12 col-lg-12 mt-3 text-center">
                                                <button class="btn btn-primary btn-orange savebutton" type="submit"><i class='bx bxs-save pe-2'></i>Change Password</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Public/vendor/jquery/jquery-3.6.1.min.js"></script>
    <script src="~/Public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>