@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">

<head>

    <meta charset="utf-8" />
    <title>Login | MG Assets Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/assets/images/favicon.ico" type="image/x-icon">
	<link href="~/assets/vendors/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/vendors.min.css" rel="stylesheet" /> 
    <link href="~/assets/css/theme.min.css" rel="stylesheet" />
    <link href="~/assets/css/login.css" rel="stylesheet" />
</head>

<body> 
   

    <main class="auth-cover-wrapper">
        <div class="auth-cover-content-inner">
            <div class="auth-cover-content-wrapper">
                <div class="auth-img">
                    @* <img src="~/assets/images/bulletin-background.jpg" alt="" class="img-fluid">
 *@
                </div>
            </div>
        </div>
        <div class="auth-cover-sidebar-inner">
            <div class="auth-cover-card-wrapper">
                <div class="auth-cover-card p-sm-5">
                    <div class="mb-5 login-cover">
                        <img src="~/assets/images/login-logo.png" alt="" class="img-fluid">
                    </div>
                    <h2 class="fs-20 fw-bolder mb-4">Login</h2>
                    <h4 class="fs-13 fw-bold mb-2">Please login to your account</h4>
                     <form method="post" class="w-100 mt-4 pt-2">
                        <div class="mb-4">
                            <input type="text" id="LoginName" name="LoginName" class="form-control" placeholder="Enter Login Name" maxlength="20" />
                        </div>
                        <div class="mb-3">
                            <input type="password" id="Password" name="Password" class="form-control" placeholder="Enter Password" maxlength="20" />
                        </div>
                        
                        <div class="mt-5">
                            <button type="submit" asp-controller="Login" asp-action="UserLogin" class="btn btn-lg btn-primary w-100" type="button"><i class='bx bx-log-in pe-2'></i>Log in</button>
                        </div>
                    </form>
                   
                    
                </div>
            </div>
        </div>
    </main>

    <script src="~/assets/js/vendors.min.js"></script>
    <script src="~/assets/vendor/jquery/jquery.validate.min.js"></script>
    <script src="~/assets/js/common-init.min.js"></script>
    <script src="~/assets/js/theme-customizer-init.min.js"></script>
</body>

</html>