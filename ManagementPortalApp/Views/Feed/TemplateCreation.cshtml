                            <tbody>
                                <tr id="Div_fontcolorfamily">
                                    <td class="divfontcolor">Font Color</td>
                                    <td class="divfontcolor"><input type="color" id="title-font-color" class="form-control"></td>

                                    <td class="divfontfamily">Font Family</td>
                                    <td class="divfontfamily">
